<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.Fragments.HomeFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:background="#6495ED">

            <ImageView
                android:id="@+id/ivtoolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/kavach" />

        </androidx.appcompat.widget.Toolbar>

        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@id/toolbar"-->
        <!--            android:layout_alignParentStart="true"-->
        <!--            android:layout_centerHorizontal="true"-->
        <!--            android:layout_marginStart="55dp"-->
        <!--            android:layout_marginTop="11dp"-->
        <!--            android:fontFamily="@font/nunitosans_extrabold"-->
        <!--            android:text="Safety Features"-->
        <!--            android:textAlignment="center"-->
        <!--            android:textColor="#2C426A"-->
        <!--            android:textSize="40sp"-->
        <!--            android:textStyle="bold" />-->


        <androidx.cardview.widget.CardView
            android:id="@+id/cvhelp"
            app:cardBackgroundColor="@color/white"
            android:layout_width="370dp"
            android:layout_height="180dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            app:cardElevation="12dp"
            app:cardCornerRadius="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/ivhelp"
                    android:layout_width="111dp"
                    android:layout_height="98dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/march"/>

                <TextView
                    android:id="@+id/tvhelp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivhelp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Helpline"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvlaw"
            app:cardBackgroundColor="@color/white"
            android:layout_width="370dp"
            android:layout_height="180dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            app:cardElevation="12dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivlaw"
                    android:layout_width="98dp"
                    android:layout_height="104dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/law" />

                <TextView
                    android:id="@+id/tvlaw"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivlaw"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="111dp"
                    android:text="Women Laws"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvwsafety"
            android:layout_width="370dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="5dp"
            android:elevation="12dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivwsafety"
                    android:layout_width="98dp"
                    android:layout_height="97dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/wsafety" />

                <TextView
                    android:id="@+id/tvwsafety"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivwsafety"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Women Safety"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvselfDefence"
            android:layout_width="370dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="5dp"
            android:elevation="12dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivselfDefence"
                    android:layout_width="109dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/karate" />

                <TextView
                    android:id="@+id/tvselfDefence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivselfDefence"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Self Defence"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvnews"
            android:layout_width="370dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="5dp"
            android:elevation="12dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivnews"
                    android:layout_width="98dp"
                    android:layout_height="97dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/news" />

                <TextView
                    android:id="@+id/tvnews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivnews"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="News"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvanon"
            android:layout_width="370dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="5dp"
            android:elevation="12dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivanon"
                    android:layout_width="109dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/anon" />

                <TextView
                    android:id="@+id/tvanon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivanon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Anonymous Forum"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>
